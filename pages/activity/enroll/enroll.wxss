.container {
  margin: 20rpx;
  width: 670rpx;
  background-color: white;
  padding: 20rpx;
  box-shadow: 3px 3px 3px #ccc;
  border-radius: 20rpx;
  margin-top: 50rpx;
}

.inputList .spliter {
  width: 100%;
  height: 1rpx;
  background-color: #eee;
  margin-bottom: 30rpx;
}
.inputList .inputItem {
  width: 100%;
  /* height: 120rpx; */
}
.inputList .inputItem .labelWrapper {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}
.inputList .inputItem .label {
  color: #515151;
  font-size: 24rpx;
  margin-right: 5rpx;
}
.inputList .inputItem .must {
  color: red;
  margin-right: 30rpx;
  font-size: 24rpx;
}
.inputList .inputItem .input {
  width: 100%;
  /* background-color: teal; */
  height: 80rpx;
  font-size: 34rpx;
}

.btnWrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 50rpx;
}
.btnWrapper .btn {
  width: 320rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  text-align: center;
  background-color: #fbe868;
  border-radius: 50rpx;
}