.topBtnGroup {
  width: 100%;
  height: 80rpx;
  position: fixed;
  top: 0;
  background-color: white;
  /* box-shadow: 0rpx -10rpx 25rpx #ccc; */
  display: flex;
  align-items: center;
}
.topBtnGroup .item {
  width: 375rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.topBtnGroup .item view {
  font-size: 26rpx;
  color: #515151;
}
.topBtnGroup .item image {
  width: 18rpx;
  height: 18rpx;
  margin-left: 3rpx;
}

.mask {
  position: fixed;
  left: 0;
  top: 80rpx;
  bottom: 0;
  right: 0;
  background:rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: center;
}

.optionPlane {
  width: 750rpx;
  background-color: white;
}
.stateOptionPlane {
  height: 320rpx;
}
.positionOptionPlane {
  height: 640rpx;
}
.optionPlane .spliter {
  margin-left: 50rpx;
  width: 700rpx;
  height: 0rpx;
  background-color: #ccc;
}
.optionPlane .option {
  display: flex;
  align-items: center;
  height: 80rpx;
  background-color: white;
}
.optionPlane .option .imageWrapper {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}
.optionPlane .option .imageWrapper image {
  width: 30rpx;
  height: 30rpx;
}
.optionPlane .option .label {
  color: #515151;
}



.activityList {
  margin-top: 100rpx;
  flex-wrap: wrap;
  display:flex;
}
.activityList .item {
  width: 345rpx;
  margin: 15rpx;
  margin-bottom: 30rpx;
}
.activityList .item image {
  width: 345rpx;
  height: 200rpx;
  border-radius:5px;
}
.activityList .item .titleWrapper {
  height: 85rpx;
}
.activityList .item .titleWrapper .title {
  font-size: 24rpx;
  padding: 0rpx 10rpx 5rpx 10rpx;
  overflow: hidden;    
  text-overflow: ellipsis;
  display: -webkit-box;-webkit-line-clamp: 2;  
  -webkit-box-orient: vertical;
}
.activityList .item .info {
  display: flex;
  align-items: center;
  padding-left: 5rpx;
  padding-right: 5rpx;
}
.activityList .item .info view {
  color: #999;
  font-size: 22rpx;
}
.activityList .item .info .position {
  margin-left:auto;
}