.activityList {
  margin-top: 30rpx;
  flex-wrap: wrap;
  display:flex;
}
.activityList .item {
  width: 345rpx;
  margin: 15rpx;
  margin-bottom: 30rpx;
}
.activityList .item image {
  width: 345rpx;
  height: 200rpx;
  border-radius:5px;
}
.activityList .item .titleWrapper {
  height: 85rpx;
}
.activityList .item .titleWrapper .title {
  font-size: 24rpx;
  padding: 0rpx 10rpx 5rpx 10rpx;
  overflow: hidden;    
  text-overflow: ellipsis;
  display: -webkit-box;-webkit-line-clamp: 2;  
  -webkit-box-orient: vertical;
}
.activityList .item .info {
  display: flex;
  align-items: center;
  padding-left: 5rpx;
  padding-right: 5rpx;
}
.activityList .item .info view {
  color: #999;
  font-size: 22rpx;
}
.activityList .item .info .position {
  margin-left:auto;
}